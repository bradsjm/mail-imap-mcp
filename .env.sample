# Copy to .env and fill in values. Do not commit secrets.

# Default account (required)
MAIL_IMAP_DEFAULT_HOST=
MAIL_IMAP_DEFAULT_PORT=993
MAIL_IMAP_DEFAULT_SECURE=true
MAIL_IMAP_DEFAULT_USER=
MAIL_IMAP_DEFAULT_PASS=

# Optional additional account example (WORK)
# MAIL_IMAP_WORK_HOST=
# MAIL_IMAP_WORK_PORT=993
# MAIL_IMAP_WORK_SECURE=true
# MAIL_IMAP_WORK_USER=
# MAIL_IMAP_WORK_PASS=

# Optional feature flags
MAIL_IMAP_WRITE_ENABLED=false

# Optional timeouts (milliseconds)
MAIL_IMAP_CONNECT_TIMEOUT_MS=30000
MAIL_IMAP_GREETING_TIMEOUT_MS=15000
MAIL_IMAP_SOCKET_TIMEOUT_MS=300000
