{
  "name": "@bradsjm/mail-imap-mcp",
  "version": "0.1.0",
  "description": "A TypeScript MCP (stdio) server that provides secure, outcome-oriented tools for searching, reading, and modifying email over IMAP.",
  "license": "MIT",
  "author": "jb@nrgup.net",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bradsjm/mail-imap-mcp.git"
  },
  "homepage": "https://github.com/bradsjm/mail-imap-mcp#readme",
  "bugs": {
    "url": "https://github.com/bradsjm/mail-imap-mcp/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "imap",
    "email",
    "mail",
    "agent",
    "stdio"
  ],
  "engines": {
    "node": ">=20.16.0 <21 || >=22.3.0"
  },
  "packageManager": "pnpm@10.28.1",
  "type": "module",
  "files": [
    "dist"
  ],
  "bin": {
    "mail-imap-mcp": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "prepack": "pnpm build",
    "publish:npm": "pnpm check && npm publish",
    "release:patch": "pnpm check && npm version patch && git push --follow-tags && npm publish",
    "release:minor": "pnpm check && npm version minor && git push --follow-tags && npm publish",
    "release:major": "pnpm check && npm version major && git push --follow-tags && npm publish",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "test": "vitest run",
    "check": "pnpm format:check && pnpm lint && pnpm typecheck && pnpm test"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "dotenv": "^17.2.3",
    "html-to-text": "^9.0.5",
    "imapflow": "^1.2.6",
    "mailparser": "^3.9.1",
    "pdf-parse": "^2.4.5",
    "sanitize-html": "^2.17.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/html-to-text": "^9.0.4",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^25.0.10",
    "@types/sanitize-html": "^2.16.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
